			BOOL HAIR_TOOL_BRUSH_IK { }
			BOOL HAIR_TOOL_BRUSH_COLLISIONS { }

			REAL HAIR_TOOL_BRUSH_RADIUS { UNIT METER; MIN 0.0; }
			STATICTEXT { NEWLINE; }
		}

		SEPARATOR { LINE; }
		
