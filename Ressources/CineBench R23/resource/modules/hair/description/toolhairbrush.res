					HAIR_TOOL_BRUSH_TYPE_PAINT_VERTEX;
				}
			}

			LONG HAIR_TOOL_BRUSH_FALLOFF
			{
				CYCLE
				{
					HAIR_TOOL_BRUSH_FALLOFF_NONE;
					HAIR_TOOL_BRUSH_FALLOFF_LINEAR;
					HAIR_TOOL_BRUSH_FALLOFF_DOME;
					HAIR_TOOL_BRUSH_FALLOFF_BELL;
					HAIR_TOOL_BRUSH_FALLOFF_CIRCLE;
					HAIR_TOOL_BRUSH_FALLOFF_NEEDLE;
					HAIR_TOOL_BRUSH_FALLOFF_SPLINE;
				}
			}
		}

		REAL HAIR_TOOL_BRUSH_STRENGTH	{ UNIT PERCENT; MINSLIDER 0.0; MAXSLIDER 100.0; CUSTOMGUI REALSLIDER; }

		REAL HAIR_TOOL_BRUSH_WIDTH { UNIT PERCENT; MIN 0.0; MAX 100.0; CUSTOMGUI REALSLIDER; }

		SPLINE HAIR_TOOL_BRUSH_FALLOFF_CURVE
		{ 
		}
	}

	GROUP HAIR_TOOL_BRUSH_GROUP_DISTANCE
	{
		GROUP
		{
			COLUMNS 2;

			BOOL HAIR_TOOL_BRUSH_DISTANCE_FADE { }
			REAL HAIR_TOOL_BRUSH_DISTANCE { MIN 0.0; }
		}

		SPLINE HAIR_TOOL_BRUSH_DISTANCE_CURVE
		{ 
		}
	}

	GROUP HAIR_TOOL_BRUSH_GROUP_VIEW
	{
		BOOL HAIR_TOOL_BRUSH_VIEW_FALLOFF { }

		SPLINE HAIR_TOOL_BRUSH_VIEW_FALLOFF_CURVE
		{ 
		}
	}

	GROUP HAIR_TOOL_BRUSH_GROUP_GUIDE
	{
		BOOL HAIR_TOOL_BRUSH_GUIDE_FALLOFF { }

