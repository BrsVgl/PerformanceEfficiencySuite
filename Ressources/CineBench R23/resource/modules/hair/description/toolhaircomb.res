		{
			COLUMNS 2;

			LONG HAIR_TOOL_COMB_DIRECTION
			{
				CYCLE
				{
					HAIR_TOOL_COMB_DIRECTION_CAMERA_X;
					HAIR_TOOL_COMB_DIRECTION_CAMERA_Y;
					HAIR_TOOL_COMB_DIRECTION_CAMERA_Z;
					HAIR_TOOL_COMB_DIRECTION_WORLD_X;
					HAIR_TOOL_COMB_DIRECTION_WORLD_Y;
					HAIR_TOOL_COMB_DIRECTION_WORLD_Z;
