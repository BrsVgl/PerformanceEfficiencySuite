		SPLINE HAIR_TOOL_COMB_CURVE
		{ 
		}

		GROUP
		{
			COLUMNS 2;

			BOOL HAIR_TOOL_COMB_FROMROOT { }
			BOOL HAIR_TOOL_COMB_INTERSECT { }

			BOOL HAIR_TOOL_COMB_WEIGHTED { }
			STATICTEXT { NEWLINE; }
		}

		REAL HAIR_TOOL_COMB_WEIGHT { UNIT PERCENT; MIN 0.0; MAX 100.0; }

		GROUP
		{
			COLUMNS 2;

			BOOL HAIR_TOOL_COMB_LIMIT_DISTANCE { }
			REAL HAIR_TOOL_COMB_DISTANCE { UNIT METER; MIN 0.0; }
		}
	}
}
