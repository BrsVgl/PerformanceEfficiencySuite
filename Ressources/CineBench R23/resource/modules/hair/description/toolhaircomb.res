					HAIR_TOOL_COMB_DIRECTION_LOCAL_Y;
					HAIR_TOOL_COMB_DIRECTION_LOCAL_Z;
					HAIR_TOOL_COMB_DIRECTION_SPLINE;
					HAIR_TOOL_COMB_DIRECTION_SHADER;
				}
			}

			REAL HAIR_TOOL_COMB_STRENGTH { UNIT PERCENT; MIN -100.0; MAX 100.0; }
		}

		LINK HAIR_TOOL_COMB_SPLINE { ACCEPT { Obase; } }
