CONTAINER otransform_panel
{
	NAME	otransform_panel;

	GROUP ID_MG_TRANSFORM_GROUPTRANSFORM
	{
		DEFAULT 0;

		LONG	ID_MG_TRANSFORM_DISPLAYMODE
		{
			CYCLE
			{
				ID_MG_TRANSFORM_DISPLAYMODE_OFF;
				ID_MG_TRANSFORM_DISPLAYMODE_WEIGHT;
				ID_MG_TRANSFORM_DISPLAYMODE_UV;
				ID_MG_TRANSFORM_DISPLAYMODE_COLOR;
				ID_MG_TRANSFORM_DISPLAYMODE_INDEX;
			}
			FIT_H;
		}
		SEPARATOR
		{
			LINE;
		}
		GROUP
		{
			LAYOUTGROUP;
			COLUMNS 3;
			GROUP
			{
				VECTOR	ID_MG_TRANSFORM_POSITION
				{
					UNIT			METER;
					CUSTOMGUI SUBDESCRIPTION;
				}
			}
			GROUP
			{
				VECTOR	ID_MG_TRANSFORM_SCALE
				{
					STEP 0.01;
					CUSTOMGUI SUBDESCRIPTION;
				}
			}
			GROUP
			{
				VECTOR	ID_MG_TRANSFORM_ROTATE
				{
					UNIT			DEGREE;
					CUSTOMGUI SUBDESCRIPTION;
				}
			}
		}
		SEPARATOR
		{
			LINE;
		}
		COLOR ID_MG_TRANSFORM_COLOR
		{
			OPEN;
		}
		SEPARATOR
		{
			LINE;
		}
		REAL	ID_MG_TRANSFORM_WEIGHT
		{
			UNIT	PERCENT;
			MIN 0.0;
			MAXSLIDER 100.0;
			CUSTOMGUI REALSLIDER;
		}
		SEPARATOR
		{
			LINE;
		}
		GROUP ID_MG_TRANSFORM_GROUPTIME
		{
			COLUMNS 2;
			BASETIME	ID_MG_TRANSFORM_TIME
			{
			}
		}
	}
}
