CONTAINER Tool_MGRadial
{
	NAME		Tool_MGRadial;
	INCLUDE ToolBase;
	//INCLUDE Tool_AxisHelper;

	GROUP		MDATA_MAINGROUP
	{
		VECTOR	MDATA_MGRADIALTOOL_CENTER
		{
			ANIM	OFF;
		}
		REAL	MDATA_MGRADIALTOOL_RADIUS
		{
			ANIM	OFF;
		}
		LONG	MDATA_MGRADIALTOOL_AXIS
		{
			CYCLE
			{
				MDATA_MGRADIALTOOL_AXIS_XY;
				MDATA_MGRADIALTOOL_AXIS_YZ;
				MDATA_MGRADIALTOOL_AXIS_XZ;
			}
			ANIM	OFF;
		}
		LONG	MDATA_MGRADIALTOOL_COUNT
		{
			MIN 1;
			ANIM	OFF;
		}
		SEPARATOR
		{
			LINE;
		}
		LONG	MDATA_MGRADIALTOOL_MODE
		{
			CYCLE
			{
				MDATA_MGRADIALTOOL_MODE_CLONE;
				MDATA_MGRADIALTOOL_MODE_INSTANCE;
			}
			ANIM	OFF;
		}
	}
}
