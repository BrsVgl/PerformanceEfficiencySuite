		VECTOR WOODSHADER_RING_WAVY_SCALE	{ UNIT PERCENT; STEP 0.1; MIN 0.0; }

		LONG WOODSHADER_SIMPLE_TYPE
		{
			ANIM OFF;
			CYCLE
			{
				WOODSHADER_SIMPLE_TYPE_CUSTOM;
				WOODSHADER_SIMPLE_TYPE_WALNUT;
				WOODSHADER_SIMPLE_TYPE_MAHOGANY;
				WOODSHADER_SIMPLE_TYPE_JACARANDA;
				WOODSHADER_SIMPLE_TYPE_PINEWOOD;
			}
		}
		GRADIENT	WOODSHADER_SIMPLE_COLOR				{ ICC_BASEDOCUMENT; }
		VECTOR		WOODSHADER_SIMPLE_SCALE				{ MIN 0.0; STEP 0.01; }
		REAL			WOODSHADER_SIMPLE_TURBULENCE	{ UNIT PERCENT; MIN 0.0; MAX 300.0; }

		SEPARATOR													{ LINE; }

		BOOL WOODSHADER_LEGACY						{  }
	}
