			CYCLE
			{
				FIELDLAYER_COLORIZE_MODE_MONOCHROME;
				FIELDLAYER_COLORIZE_MODE_DUOTONE;
			}
		}

		SEPARATOR { LINE; }

		COLOR FIELDLAYER_COLORIZE_COLORBASE { OPEN; }
