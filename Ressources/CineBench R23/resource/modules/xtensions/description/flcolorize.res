		SEPARATOR { LINE; }

		LONG FIELDLAYER_COLORIZE_SOURCE
		{
			CYCLE
			{
				FIELDLAYER_COLORIZE_SOURCE_VALUE;
				FIELDLAYER_COLORIZE_SOURCE_COLOR;
			}
