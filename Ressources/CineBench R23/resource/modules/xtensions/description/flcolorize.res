		COLOR FIELDLAYER_COLORIZE_COLORTOP { OPEN; }
		REAL	FIELDLAYER_COLORIZE_COLORTOP_DENSITY { UNIT PERCENT; MINSLIDER 0.0; MAX 100.0; CUSTOMGUI REALSLIDER; }

