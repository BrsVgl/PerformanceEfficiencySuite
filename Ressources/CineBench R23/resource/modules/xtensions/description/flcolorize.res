		{
			CYCLE
			{
				FIELDLAYER_COLORIZE_COLORTOP_MODE_PIGMENT;
				FIELDLAYER_COLORIZE_COLORTOP_MODE_DYE;
			}
		}

		SEPARATOR{ LINE; }
		
		BOOL FIELDLAYER_COLORIZE_CLIP {}
	}
}
